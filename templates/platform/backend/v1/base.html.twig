{% block content %}

{#{ include('platform/backend/v1/navbar.html.twig') }#}

{{ include('platform/backend/v1/header.html.twig') }}

<div class="container-fluid">
    <div class="row">

        {{ include('platform/backend/v1/sidebar.html.twig') }}

        <main class="col-md-9 ms-sm-auto col-lg-10 p-3">

            {% if breadcrumbs is defined %}
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        {% for title,url in breadcrumbs %}
                        <li class="breadcrumb">
                            <a href="{{ url }}" class="text-secondary"><small>{{ title }}</small></a>
                        </li>
                        {% endfor %}
                    </ol>
                </nav>
            {% endif %}

            {% block main %}{% endblock %}

        </main>
    </div>
</div>

