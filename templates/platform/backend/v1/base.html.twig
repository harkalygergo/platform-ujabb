    body {
        font-family: Arial, sans-serif;
    }

    h1 {
        font-weight: bold;
    }
    .dropdown-toggle::after {
        content:none;
    }
    nav ol.breadcrumb li::after {

        content: " \00bb "; /* This is the CSS code for raquo */
        padding: 0 4px; /* Add some padding so it doesn't stick to the breadcrumb text */
    }

    .sidebar .nav-link.active {
        color: #2470dc;
    }

    .sidebar .nav-link {
        font-size: 0.8em;
    }

    nav ol.breadcrumb li:last-child::after {
        content: ""; /* We don't want a raquo after the last breadcrumb item */
    }
