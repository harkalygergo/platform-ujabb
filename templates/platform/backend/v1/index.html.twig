{% extends 'platform/backend/v1/base.html.twig' %}

{% block main %}
    <div class="row justify-content-center">
        <p><small>Vezérlőpult &raquo; Profil &raquo; Szolgáltatások</small></p>
        <h1><i class="bi bi-speedometer2"></i> {{ 'admin.dashboard'|trans }}</h1>
        <hr>
        <div class="col-12">
            <h2>Szolgáltatások</h2>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Megnevezés</th>
                    <th>Díj</th>
                    <th>Pénznem</th>
                    <th>Következő fizetési időpont</th>
                </tr>
                </thead>
                <tbody>
                {% for service in app.user.services %}
                    <tr>
                        <td>{{ service.title }}</td>
                        <td>{{ service.price }}</td>
                        <td>{{ service.currency }}</td>
                        <td>{{ service.nextPayment.format('Y-m-d') }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-xxl-3 col-sm-6">
            <div class="card border-0 box-shadow border-radius-10 mb-4 bg-primary text-white">
                <div class="card-body p-2">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1 me-3 p-3">
                            <h5 class="fw-medium fs-18 mb-1">Teljesített feladatok</h5>
                            <h4 class="fw-medium fs-30 mb-0"><b>8.150</b></h4>
                        </div>
                        <div class="flex-shrink-0 px-1">
                            <div class="crm-icon">
                                <i class="bi bi-list-task" style="font-size:2em;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xxl-3 col-sm-6">
            <div class="card border-0 box-shadow border-radius-10 mb-4 bg-success text-white">
                <div class="card-body p-2">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1 me-3 p-3">
                            <h5 class="fw-medium fs-18 mb-1">Értékesítés bevétele</h5>
                            <h4 class="fw-medium fs-30 mb-0"><b>3.650.034</b></h4>
                        </div>
                        <div class="flex-shrink-0 px-1">
                            <div class="crm-icon">
                                <i class="bi bi-currency-dollar" style="font-size:2em;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xxl-3 col-sm-6">
